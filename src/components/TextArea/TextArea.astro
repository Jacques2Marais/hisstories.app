---
const { placeholder, id, className, oninput } = Astro.props;
---

<div class="flex flex-col gap-0.5">
    <div class="flex justify-between items-center">
        <label for={id} class="text-gray-800">
            <slot name="label"></slot>
        </label>
        <span class="text-sm text-gray-600">
            <slot name="helper"></slot>
        </span>
    </div>
    <textarea oninput={oninput} id={id} class={"px-3 py-1.5 rounded-md transition-all duration-100 border-gray-200 focus-visible:border-gray-400 border outline-none " + className} placeholder={placeholder}></textarea>
    <div class="text-red-800">
        <slot name="error"></slot>
    </div>
</div>